{
	"name": "no-framework-todo-list",
	"version": "1.0.0",
	"description": "To-do List without any framework",
	"main": "script.js",
	"scripts": {
		"test": "jest"
	},
	"jest": {
		"testEnvironment": "jsdom",
		"transform": {
			"^.+\\.[t|j]sx?$": "babel-jest"
		},
		"moduleFileExtensions": [
			"js",
			"json",
			"jsx"
		],
		"testPathIgnorePatterns": [
			"/node_modules/"
		],
		"setupFiles": [
			"./jest.setup.js"
		],
		"setupFilesAfterEnv": [
			"@testing-library/jest-dom"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		}
	},
	"keywords": [],
	"author": "Philipe Morais",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.26.0",
		"@babel/preset-env": "^7.26.0",
		"@testing-library/jest-dom": "^6.6.3",
		"babel-jest": "^29.7.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jsdom": "^25.0.1"
	}
}
